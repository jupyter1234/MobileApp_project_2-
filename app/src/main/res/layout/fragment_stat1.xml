    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/daily_stat_title"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="66dp"
            android:text="@string/daily_stat_title"
            android:textAppearance="@style/text_small"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">
            <RelativeLayout
                android:id="@+id/color1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/red_blur"
                />
            <RelativeLayout
                android:id="@+id/color2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="32dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/yellow_blur"/>
            <RelativeLayout
                android:id="@+id/color3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="32dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/green_blur"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
