<?xml version="1.0" encoding="utf-8"?>
<!-- Auto layout, variables, and unit scale are not yet supported -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsActivity"
    android:orientation="vertical"
    android:background="#FBFBFB"
    android:gravity="top|center">

    <TextView
        android:id="@+id/stat_title1"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginTop="66dp"
        android:text="@string/stat_title1"
        android:textAppearance="@style/text_big"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/stat_title2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:text="@string/stat_title2"
        android:textAppearance="@style/text_small"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/average_mood_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/text_small"
        android:text="1"
        android:textSize="25sp"
        android:layout_marginTop="30dp"/>
    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/chart"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_stat_title"
        android:textAppearance="@style/text_big"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/freq_1st_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1st:"
        android:textAppearance="@style/text_small"/>
    <TextView
        android:id="@+id/freq_2nd_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd:"
        android:textAppearance="@style/text_small"/>
    <TextView
        android:id="@+id/freq_3rd_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3rd:"
        android:textAppearance="@style/text_small"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottombar2"
        android:layout_marginTop="100dp"/>
</LinearLayout>